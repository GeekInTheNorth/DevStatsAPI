<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/DevStats.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("MVP", "Vote", "Mvp")</li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sprint Planning<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Tasking Out Status", "TaskingStatus", "Jira")</li>
                        <li>@Html.ActionLink("Sprint Planner", "SprintPlanner", "Jira")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("HR Sprint Planner", "SprintPlanner", "Jira", new { @teamName = "HR" }, new { })</li>
                        <li>@Html.ActionLink("Octopus Sprint Planner", "SprintPlanner", "Jira", new { @teamName = "Octopus" }, new { })</li>
                        <li>@Html.ActionLink("Payroll Sprint Planner", "SprintPlanner", "Jira", new { @teamName = "Payroll" }, new { })</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">KPI<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Actuals vs Estimates", "ActualsVsEstimates", "KPI")</li>
                        <li>@Html.ActionLink("New Feature Failure Rate", "NewFeatureFailureRate", "KPI")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Reports<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Defect Analysis", "Analysis", "DefectReport")</li>
                        <li>@Html.ActionLink("Defect Summary", "JiraSummary", "DefectReport")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Source<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Cascade Branch Check", "Branches", "SourceCode", new { @repoName = "Cascade" }, new { })</li>
                        <li>@Html.ActionLink("State Checker", "StateChecker", "Jira")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin Tools<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Jira Audit", "Audit", "Jira")</li>
                        <li>@Html.ActionLink("Jira Webhook Execution", "ApiTest", "Jira")</li>
                        <li>@Html.ActionLink("System Properties", "Index", "SystemProperty")</li>
                        <li>@Html.ActionLink("Users", "Index", "Account")</li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Log Off", "LogOff", "Account")</li>
            </ul>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
    </div>
</body>
</html>
